<form id="postForm" class="form-group">
    <div class="form-group">
        <label for="usr">Your Name:</label>
        <input type="text" class="form-control" id="usr" required>
    </div>
    <div class="form-group">
        <label for="comment">Write something here:</label>
        <textarea class="form-control" rows="3" id="comment" required></textarea>
    </div>
    <button type="button" id="btnPost" class="btn btn-default">Post</button>
    <span id="message"></span>
</form>
@{if (!HttpContext.Current.Request.Browser.IsMobileDevice && HttpContext.Current.Request.Browser.IsBrowser("chrome"))
  { 
    @:<input id="chkMessages" type="checkbox" /> Tick to be notified of new posts.
    }
}
